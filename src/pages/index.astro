---
import Layout from '../layouts/Layout.astro'
import { getCollection } from 'astro:content'
import ArticleCard from '../components/ArticleCard.astro'

const articles = await getCollection('articles')
const derniersArticles = articles.slice(0, 3)

---

<Layout title="Du Management">
  <main class="accueil">
    <section class="hero">
      <h1>Du Management</h1>
      <p>Des id√©es simples pour diriger avec clart√© et humanit√©.</p>
      <p><a href="/articles/" class="cta">Voir tous les articles</a></p>

    </section>

    <section class="articles">
      <h2>üóûÔ∏è Derniers articles</h2>
      {derniersArticles.map(({ data, slug }) => (
        <ArticleCard
          title={data.title}
          description={data.description}
          pubDate={data.pubDate}
          href={`/articles/${slug}/`}
        />
      ))}
    </section>

  </main>

  <style>
    .accueil {
      max-width: 700px;
      margin: auto;
      padding: 3rem 1rem;
      font-family: 'Noto Serif JP', serif;
    }

    .hero {
      text-align: center;
      margin-bottom: 3rem;
    }
    .hero h1 {
      font-size: 2.2rem;
      margin: 0;
      color: var(--indigo);
      font-family: 'Sawarabi Mincho', serif;
    }
    .hero .cta {
      display: inline-block;
      margin-top: 1rem;
      padding: 0.5rem 1rem;
      background: var(--indigo);
      color: white;
      text-decoration: none;
      border-radius: 4px;
    }
    .hero .cta:hover {
      background: var(--accent);
    }


    .articles a {
      text-decoration: none;
      color: var(--text);
      transition: color 0.3s;
    }

    .articles a:hover {
      color: var(--accent);
    }

    h2 {
      margin-top: 3rem;
      font-size: 1.6rem;
    }

    small {
      color: #888;
      font-size: 0.85rem;
    }
  </style>
</Layout>
