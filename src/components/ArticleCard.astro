---
export interface Props {
  title: string;
  description: string;
  pubDate: string;
  href: string;
}

const { title, description, pubDate, href } = Astro.props;
---

<article class="card">
  <a href={href}>
    <h3>{title}</h3>
    <p>{description}</p>
    <time datetime={pubDate}>{pubDate}</time>
  </a>

  <style>
    .card {
      margin-bottom: 2rem;
      padding: 1rem 1.5rem;
      border-left: 4px solid #4b6e91;
      background: #fffdfb;
      transition: background 0.3s;
    }

    .card:hover {
      background: #f7f4ef;
    }

    h3 {
      margin: 0;
      font-size: 1.2rem;
      color: #4b6e91;
    }

    p {
      margin: 0.5rem 0;
      color: #333;
    }

    time {
      font-size: 0.85rem;
      color: #888;
    }

    a {
      text-decoration: none;
      display: block;
    }
  </style>
</article>
